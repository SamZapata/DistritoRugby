%table
  %thead
    %tr
      %th First name
      %th Last name
      %th Identification
      %th Birthdate
      %th Eps
      %th Weigth
      %th Height
      %th Position
      %th Phone
      %th Injuries
      %th About
      %th Email
      %th
      %th
