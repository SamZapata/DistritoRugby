-# frozen_string_literal: true
= simple_form_for(@game_union) do |f|
  = f.error_notification
  = f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present?

  .form-inputs
    = f.input :name
    = f.input :about
    = f.input :founded
    = f.input :website
    = f.input :logo
    = f.input :country
    = f.input :abbr

  .form-actions
    = f.button :submit
