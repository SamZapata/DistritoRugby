-# .distrito-rugby-stories
.stories-breadcrumb
  %nav{"aria-label" => "breadcrumb"}
    %ol.breadcrumb
      %li.breadcrumb-item
        %a{:href => "/", :class => 'link'}
          .fas.fa-home
      %li.breadcrumb-item
        %a{:href => stories_path, :class => 'link' }= t('breadcrumb.stories')
      %li.breadcrumb-item.active{"aria-current" => "page"} Top

.stories-filters
  .scrollmenu
    - Tags::Story.all.each do |tag|
      = link_to tag.name, "/stories/tags/#{tag.name}", class: 'link-w', remote: true
    -# - Tags::Story.all.each do |tag|
    -# TODO: Create an array with the main tags to show. TOP of Stories

.stories-index
  .stories-index__content.col-12
    .stories-selection.card-columns
      - @all_stories.each do |story|
        .card
          -# = link_to(image_tag(story.image, width: '100%', alt: "##{story.name} #DistritoRugby", class: 'img-hov' ), story)
          .card-body
            %h5.card-title= link_to story.name, story, class: 'link'
            %p.card-text= story.summary
