.distrito-rugby-story
  %nav{"aria-label" => "breadcrumb"}
    %ol.breadcrumb
      %li.breadcrumb-item
        %a{:href => "/", :class => 'link'}
          .fas.fa-home
      %li.breadcrumb-item
        %a{:href => stories_path, :class => 'link' }= t('breadcrumb.stories')
      %li.breadcrumb-item.active{"aria-current" => "page"}= t('story.new')

  %section.story-updating
    .section-name= t('story.share_a_story')
    .story-content
      = render 'form'
