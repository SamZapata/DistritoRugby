.sessions-content
  %br
  .card.user-devise-form
    .card-header.bg-dark
      .header-title.text-center= t('sessions.update_user')
    .card-body
      = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = f.error_notification
        .form-group
          = f.input :email,
            required: true,
            label: false,
            placeholder: 'email',
            autofocus: true ,
            input_html: { autocomplete: "email", class: 'form-control' }
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %p= "Currently waiting confirmation for: #{resource.unconfirmed_email}"
        .form-group
          = f.input :password,
            required: true,
            label: false,
            placeholder: 'password',
            hint: ("m√≠nimo #{@minimum_password_length} caracteres" if @minimum_password_length),
            input_html: { autocomplete: "new-password", class: 'form-control' }
        .form-group
          = f.input :password_confirmation,
            required: true,
            label: false,
            placeholder: 'password',
            input_html: { autocomplete: "new-password", class: 'form-control' }
        .form-actions
          = f.button :submit, "Aceptar", class: 'btn btn-dark'
        %br

  .mr-5.mt-5.float-right
    %h5 Eliminar mi cuenta
    =link_to "Cancel my account", registration_path(resource_name), class: 'link', data: { confirm: "Are you sure?" }, method: :delete
